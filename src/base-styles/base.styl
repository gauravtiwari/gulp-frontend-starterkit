html {
  box-sizing: border-box
  width: 100%
  height: 100%
  overflow-x: hidden
}
*, *:before, *:after {
  box-sizing: inherit
}
.group:after {
  visibility: hidden;
  display: block;
  content: "";
  clear: both;
  height: 0;
}
body {
  color: #222
  width: 100%
  height: 100%
}
body, p, a, input, label {
  font-family: sans-font
  font-weight: 300
  line-height: 150%
}
p {
  margin-bottom: 1.5em
}
